{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "*": ["*"],
      "@src/*": ["src/*", "dist/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/scripts"
  ]
}

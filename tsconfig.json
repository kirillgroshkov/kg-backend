{
  "compilerOptions": {
    // "allowSyntheticDefaultImports": true,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    // "esModuleInterop": true,
    "target": "es2017",
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": "./",
    /*"typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],*/
    "paths": {
      "*": ["*"],
      "@src/*": ["src/*", "dist/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/scripts"
  ]
}
